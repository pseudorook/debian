#! /bin/bash
set -eu

dir="$(dirname "$0")"


#
# Fancy color output
#

show_error() {
  echo -e "\033[1;31m$@\033[m" 1>&2
}
show_info() {
  echo -e "\033[1;32m$@\033[0m"
}
show_warning() {
  echo -e "\033[1;33m$@\033[0m"
}
show_question() {
  echo -e "\033[1;34m$@\033[0m"
}
ask_question() {
  read -p $'\033[1;34m'"$@ "$'\033[0m' var
  echo "${var}"
}
show_success() {
  echo -e "\033[1;35m$@\033[0m"
}
show_header() {
  echo -e "\033[1;36m$@\033[0m"
}
show_listitem() {
  echo -e "\033[0;37m$@\033[0m"
}


#
# Source the functions
#

. $dir/functions/00-check
. $dir/functions/01-base
. $dir/functions/01-misc
. $dir/functions/02-desktop
. $dir/functions/03-network
. $dir/functions/03-packages
. $dir/functions/04-themes
. $dir/functions/05-personal


#
# Define main select wrapper
#

function main {
  show_question "Select an option:"
  show_info "Main (Hit ENTER to see options again.)"
  options=("Quit" "Autopilot" "Base" "Miscellaneous" "Desktop environment" \
           "Network tools" "Applications" "Themes" "Personalization")
  select option in "${options[@]}"; do
    case $option in
      "Quit")
        show_success "I hope this was as fun for you as it was for me."
        break
        ;;
      "Autopilot")
        response=$(ask_question "Let this script install everything? (y/N)")
        if [[ "$response" =~ ^([yY][eE][sS]|[yY])+$ ]]; then
          # Install base packages
          install_base
          purge_packages
          install_firmware
          enable_contrib_repos
          enable_nonfree_repos
          update_packages
          enable_sudo_insults
          disable_beep

          # Install miscellaneous extras
          install_zsh
          install_selinux
          install_utils
          install_laptop
          install_android

          # Install a desktop environment
          install_gnome
          install_cinnamon

          # Set up network configuration
          install_network
          install_tor
          use_onion_repos

          # Install useful packages
          install_apps
          install_codecs
          install_dev
          install_extra
          # install_games
          # install_kvm
          # install_kvm_guest
          install_messaging
          install_music
          install_texlive
          install_torbrowser
          install_vim
          # install_virtualbox
          # install_virtualbox_guest
          # install_wine

          # Install themes
          install_theme_deps
          install_arc_gtk
          install_adapta_gtk
          install_plata_gtk
          install_fonts
          install_papirus_icons
          install_vim_theme
          install_thunderbird_theme
          install_timed_backgrounds
          set_qtcompat

          # Add my personal settings
          set_system_font
          set_icon_theme
          set_gtk_theme
          set_lightdm_theme
          set_gdm_theme
          set_dark_gtk
          import_cinnamon_dconf
          import_gnome_dconf
          import_apps_dconf
          import_terminal_dconf
          enable_autologin
          invert_brightness
          disable_pulseaudio_suspend
          disable_11n
          install_scripts

          show_success "Everything installed."
        fi

        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Base")
        01-base
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Miscellaneous")
        01-misc
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Desktop environment")
        02-desktop
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Network tools")
        03-network
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Applications")
        03-packages
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Themes")
        04-themes
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      "Personalization")
        05-personal
        show_info "Main (Hit ENTER to see options again.)"
        ;;
      *)
        show_warning "Invalid option."
        ;;
    esac
  done
}


#
# Check if dependencies are installed and if network is working
#

install_dependencies
check_user
check_network
check_debian_release


#
# GO!!!
#

main
